{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "RustSSH",
    "version": "1.0.0",
    "identifier": "com.rustssh.app",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "RustSSH — SSH Client",
                "width": 1280,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "minHeight": 600,
                "decorations": false,
                "transparent": true,
                "shadow": false,
                "theme": "Dark"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {
        "shell": {
            "open": true
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis",
            "dmg",
            "app"
        ],
        "icon": [
            "icons/icon.ico",
            "icons/icon.png"
        ],
        "category": "DeveloperTool",
        "copyright": "Copyright © 2026",
        "publisher": "RustSSH Team"
    }
}