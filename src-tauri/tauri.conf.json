{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
    "productName": "RustSSH",
    "version": "1.0.0",
    "identifier": "com.rustssh.app",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "RustSSH — SSH Client",
                "width": 1280,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "minWidth": 800,
                "minHeight": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {
        "dialog": {},
        "shell": {
            "open": true
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis",
            "dmg"
        ],
        "icon": [
            "icons/icon.ico"
        ],
        "category": "DeveloperTool",
        "copyright": "Copyright © 2026",
        "publisher": "RustSSH Team"
    }
}